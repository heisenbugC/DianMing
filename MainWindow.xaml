<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DianMing"
        mc:Ignorable="d"
        Title="点名" Height="600" Width="800" ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Loaded="Display_Buttons">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu VerticalAlignment="Top" Grid.Row="0">
            <MenuItem Header="选项">
                <MenuItem Header ="编辑班级" Click="Go_to_EditClasses"/>
                <MenuItem Header ="编辑学生" Click="Go_to_EditStudents"/>
                <MenuItem Header ="退出" Click="Exit_App"/>
            </MenuItem>
        </Menu>

        <!-- Centered content area -->
        <Grid Grid.Row="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Label x:Name="SelectedMemberLabel" Content="" FontSize="72" FontFamily="SimSun" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,40" />
                <WrapPanel x:Name="ButtonsPanel" HorizontalAlignment="Center" Margin="0,0,0,0" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
